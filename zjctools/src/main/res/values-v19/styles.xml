<resources>

    <!-- Base application theme. -->
    <style name="ZTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/zBlue</item>
        <!--界面背景色，为了优化 UI，这里设置为透明-->
        <item name="android:windowBackground">@color/zTransparent</item>

        <!--设置主题不需要ActionBar-->
        <item name="windowActionBar">false</item>
        <!--设置主题不需要Title-->
        <item name="windowNoTitle">true</item>

        <!--设置 ActionMode 效果，防止 ActionMode 将Toolbar顶下去-->
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <!--半透明状态栏-->
        <item name="android:windowTranslucentStatus">false</item>
        <!--设置导航栏半透明效果，TODO 设置导航栏半透明会导致布局下移，需注意-->
        <item name="android:windowTranslucentNavigation">false</item>
        <!--设置状态栏颜色-->
    </style>

    <!--透明主题-->
    <style name="ZTheme.Transparent">
        <item name="colorPrimary">@color/zTransparent</item>
        <item name="colorPrimaryDark">@color/zTransparent</item>
        <!-- 设置允许修改系统栏的背景色 比如导航栏 状态栏等-->
        <!--半透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--设置导航栏半透明效果，TODO 设置导航栏半透明会导致布局下移，需注意-->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <!--授权弹窗主题-->
    <style name="ZTheme.Permission">
        <item name="android:windowBackground">@color/zTransparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>




</resources>
