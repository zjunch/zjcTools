<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="ZNinePicturesView">
        <attr name="zjc_nine_spacex" format="integer"/><!--x 间距-->
        <attr name="zjc_nine_spacey" format="integer"/><!--y 间距-->
        <attr name="zjc_nine_average2_enable" format="boolean"/><!--两张图张图一行两个-->
        <attr name="zjc_nine_average4_enable" format="boolean"/><!--四张图一行两个-->
        <attr name="zjc_nine_12_Enable" format="boolean"/><!--三张图 左边一个右边两个-->
        <attr name="zjc_nine_max_counts" format="integer"/><!--最多显示多少张-->
        <attr name="zjc_nine_full_One" format="boolean"/><!--一张图的时候，一行一张-->
        <attr name="zjc_nine_show_un_counts" format="boolean"/><!--是否有未展示的图片个数的文字显示-->
        <attr name="zjc_nine_un_counts_textColor" format="color" /><!--未读图片个数的文字颜色-->
        <attr name="zjc_nine_un_counts_textSzie" format="integer"/><!--未读图片个数的文字大小-->
    </declare-styleable>



    <declare-styleable name="ZSettingInputView">
        <!--是否显示底部分隔线-->
        <attr name="zjc_siv_Line_enable" format="boolean" />
        <!--标题-->
        <attr name="zjc_siv_title_text" format="string" />
        <!--底部分隔线颜色-->
        <attr name="zjc_siv_line_color" format="color" />
        <!--右侧输入框hint-->
        <attr name="zjc_siv_hint_text" format="string" />
        <!--右侧输入框最多字符-->
        <attr name="zjc_siv_max_counts" format="integer" />

    </declare-styleable>

    <declare-styleable name="ZSettingView">
        <!--是否显示底部分隔线-->
        <attr name="zjc_sv_Line_enable" format="boolean" />
        <!--是否显示最左边点-->
        <attr name="zjc_sv_point_enable" format="boolean" />
        <!--是否显示左侧title右右侧有个start-->
        <attr name="zjc_sv_start_enable" format="boolean" />
        <!--是否显示右侧箭头-->
        <attr name="zjc_sv_arrow_enable" format="boolean" />
        <!--左侧标题颜色-->
        <attr name="zjc_sv_title_Color" format="color" />
        <!--左侧标题-->
        <attr name="zjc_sv_title_text" format="string" />
        <!--右侧描述的hint-->
        <attr name="zjc_sv_desc_Hint" format="string" />
        <!--右侧描述的字体颜色-->
        <attr name="zjc_sv_desc_color" format="color" />
        <!--右侧描述文字-->
        <attr name="zjc_sv_desc_text" format="string" />
    </declare-styleable>


    <!--自定义正方形布局-->
    <declare-styleable name="ZSquareLayout">
        <!--正方形布局大小取宽还是高度-->
        <attr name="zjc_unify_width" format="boolean" />
    </declare-styleable>


    <!--自定义音频录制控件-->
    <declare-styleable name="VMRecordView">
        <!--取消颜色-->
        <attr name="zjc_cancel_color" format="color|integer" />
        <!--触摸区域外圈颜色-->
        <attr name="zjc_outer_color" format="color|integer" />
        <!--触摸区域内圈颜色-->
        <attr name="zjc_inner_color" format="color|integer" />
        <attr name="zjc_inner_size" format="dimension" />
        <!--触摸区域提示文字-->
        <attr name="zjc_touch_normal_desc" format="string|reference" />
        <attr name="zjc_touch_cancel_desc" format="string|reference" />
        <!--触摸提示文本颜色-->
        <attr name="zjc_desc_color" format="color|integer" />
        <!--触摸提示文本大小-->
        <attr name="zjc_desc_size" format="dimension" />
        <!--时间文本颜色-->
        <attr name="zjc_time_color" format="color|integer" />
        <!--时间文本大小-->
        <attr name="zjc_time_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ZStatusBarHeightView">
        <attr name="zjc_use_type" format="integer">
            <enum name="zjc_use_height" value="0" />
            <enum name="zjc_use_padding_top" value="1" />
        </attr>
    </declare-styleable>


    <!--自定义ViewGroup-堆叠头像的点赞Layout-->
    <declare-styleable name="ZPileLayout">
        <attr name="zjc_pileLayout_verSpace" format="dimension" />
        <attr name="zjc_pileLayout_pileWidth" format="dimension" />
    </declare-styleable>


    <!--自定义剪切控件-->
    <declare-styleable name="ZCropView">
        <attr name="zjc_crop_mask_color" format="color|integer" />
        <attr name="zjc_crop_border_color" format="color|integer" />
        <attr name="zjc_crop_border_width" format="dimension" />
        <attr name="zjc_crop_focus_width" format="dimension" />
        <attr name="zjc_crop_focus_height" format="dimension" />
        <attr name="zjc_crop_style" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="circle" value="1" />
        </attr>
    </declare-styleable>


    <!--自定义 VMTopBar 控件-->
    <declare-styleable name="ZTopBar">
        <!--返回图标-->
        <attr name="zjc_icon" format="reference" />
        <!--标题-->
        <attr name="zjc_title" format="string|reference" />
        <!--子标题-->
        <attr name="zjc_subtitle" format="string|reference" />
        <!--右侧按钮-->
        <attr name="zjc_end_btn" format="string|reference" />
        <!--右侧图标-->
        <attr name="zjc_end_icon" format="reference" />
        <!--标题颜色-->
        <attr name="zjc_title_color" format="color|integer" />
        <!--子标题颜色-->
        <attr name="zjc_subtitle_color" format="color|integer" />
        <!--装饰分割线-->
        <attr name="zjc_is_center" format="boolean" />
    </declare-styleable>



</resources>
