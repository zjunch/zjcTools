<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/z_shape_loading"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/z_dimen_20"
    android:paddingRight="@dimen/z_dimen_20">



    <ProgressBar
        android:layout_width="@dimen/z_dimen_40"
        android:layout_height="@dimen/z_dimen_40"
        android:theme="@style/ZLoadingCircleProgress"
        android:layout_margin="@dimen/z_dimen_16" />

    <TextView
        android:id="@+id/zjc_dialog_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zjc_progress_wait"
        android:textColor="@color/zWhite"
        android:layout_marginBottom="16dp"
        android:textSize="@dimen/z_size_14" />

</LinearLayout>