<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.android.zjctools.widget.ZSettingInputView">

    <TextView
        android:id="@+id/text_title"
        style="@style/text_14_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/z_dimen_5"
        android:text="title" />

    <EditText
        android:id="@+id/input"
        style="@style/text_14_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_toRightOf="@id/text_title"
        android:layout_toLeftOf="@+id/ivRightArrow"
        android:gravity="right"
        android:hint="快捷键"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/z_dimen_5"
        android:textColorHint="@color/zGray54" />


    <ImageView
        android:id="@+id/ivRightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_title"
        android:layout_alignBottom="@id/text_title"
        android:layout_marginTop="@dimen/z_dimen_7"
        android:layout_alignParentRight="true"
        android:src="@drawable/z_ic_arrow_right_gray" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_divide"
        android:layout_below="@id/input" />
</RelativeLayout>
