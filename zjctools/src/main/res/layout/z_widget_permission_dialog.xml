<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/zjc_permission_dialog_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/zjc_dimen_12"
        android:layout_marginTop="@dimen/zjc_dimen_8"
        android:layout_marginEnd="@dimen/zjc_dimen_24"
        style="@style/ZjcText.Body1"
        android:text="@string/zjc_permission_again_reason" />

    <com.android.zjctools.widget.ZViewGroup
        android:id="@+id/zjc_permission_dialog_custom_vg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/zjc_dimen_24"
        android:layout_marginTop="@dimen/zjc_dimen_16"
        android:layout_marginEnd="@dimen/zjc_dimen_24" />

    <Button
        android:id="@+id/zjc_i_know_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zjc_dimen_40"
        android:layout_marginStart="@dimen/zjc_dimen_24"
        android:layout_marginTop="@dimen/zjc_dimen_16"
        android:layout_marginEnd="@dimen/zjc_dimen_24"
        android:layout_marginBottom="@dimen/zjc_dimen_16"
        android:text="@string/zjc_i_know" />
</LinearLayout>