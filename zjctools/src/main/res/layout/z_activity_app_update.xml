<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/z_half5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/z_dimen_40"
        android:layout_width="wrap_content"
        android:background="@color/zWhite"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/zvUpdateBg"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/z_bg_app_update" />

        <TextView
            android:id="@+id/zvUpdateVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="43dp"
            android:text="发现新版本"
            android:textColor="#ffffffff"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/zvUpdateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zvUpdateBg"
            android:layout_marginLeft="18dp"
            android:text="更新内容"
            android:textColor="@color/zGray54"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/zvUpdateContentLv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zvUpdateText"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

        </LinearLayout>


        <ProgressBar
            android:id="@+id/zvUpdateProgressRg"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/zvUpdateContentLv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="13dp"
            android:progress="0"
            tools:visibility="visible"
            android:progressDrawable="@drawable/z_progress_update_version"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/zvUpdateButtonRv"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@+id/zvUpdateProgressRg"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="26dp">

            <TextView
                android:id="@+id/zvUpdateCancelTv"
                android:layout_width="97dp"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/z_shape_conner20_gray_stoke"
                android:gravity="center"
                android:text="下次再说"
                android:textColor="#ffb1b1b1"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/zvUpdateDownLoadTv"
                android:layout_width="97dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/z_shape_corner20_blue"
                android:gravity="center"
                android:text="去下载"
                android:textColor="#fff"
                android:textSize="13sp" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
