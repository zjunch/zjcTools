<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/zlvContent"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@drawable/z_set_bg"
    tools:context="com.android.zjctools.widget.ZSettingView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvTitle"
            style="@style/text_14_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvPoint"
            android:paddingTop="5dp"
            android:gravity="center_vertical"
            android:text="标题" />


        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="@color/zPurple8"
            android:layout_alignTop="@id/tvTitle"
            android:layout_alignBottom="@id/tvTitle"
            android:gravity="center"
            android:textSize="@dimen/z_size_4"
            android:text="●" />

        <TextView
            android:id="@+id/tvRightStar"
            style="@style/text_14_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:layout_alignTop="@id/tvTitle"
            android:layout_alignBottom="@id/tvTitle"
            android:layout_toRightOf="@id/tvTitle"
            android:text="*" />

        <TextView
            android:id="@+id/tvCenter"
            style="@style/text_14_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvTitle"
            android:layout_alignBottom="@id/tvTitle"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="" />

        <ImageView
            android:id="@+id/ivRightArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvTitle"
            android:layout_alignBottom="@id/tvTitle"
            android:layout_alignParentRight="true"
            android:src="@drawable/z_ic_arrow_right_gray"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/tvDesc"
            style="@style/text_14_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ivRightArrow"
            android:layout_toRightOf="@id/tvTitle"
            android:gravity="right"
            android:hint=""
            android:layout_alignTop="@id/tvTitle"
            android:paddingTop="5dp"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/z_dimen_5"
        android:layout_height="1dp"
        android:background="@color/app_divide" />
</LinearLayout>
