<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zWhite"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/zjc_pick_folder_cover_iv"
        android:layout_width="@dimen/zjc_dimen_56"
        android:layout_height="@dimen/zjc_dimen_56"
        android:layout_margin="@dimen/zjc_margin_normal"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/zjc_pick_folder_name_tv"
            tools:text="@string/zjc_pick_all_picture"
            style="@style/ZjcText.Subhead"
            />

        <TextView
            android:id="@+id/zjc_pick_folder_count_tv"
            android:layout_marginTop="@dimen/zjc_margin_small"
            tools:text="56 å¼ "
            style="@style/ZjcText.Caption"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/zjc_pick_folder_select_iv"
        android:layout_width="@dimen/zjc_dimen_24"
        android:layout_height="@dimen/zjc_dimen_24"
        android:layout_marginEnd="@dimen/zjc_margin_large"
        android:layout_marginStart="@dimen/zjc_margin_normal"
        android:src="@drawable/zjc_ic_radio_button_selector" />
</LinearLayout>