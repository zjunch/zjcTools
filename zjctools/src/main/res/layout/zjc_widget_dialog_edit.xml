<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zjcWhite"
    tools:context="com.android.zjctools.widget.dialog.ZPDialog">

    <TextView
        android:id="@+id/zjc_dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/zjc_dimen_16"
        android:text="@string/app_name"
        android:textColor="@color/zjc_black_87"
        android:textSize="@dimen/zjc_size_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/zjc_dialog_content_et"
        android:layout_width="@dimen/zjc_dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zjc_dimen_24"
        android:layout_marginRight="@dimen/zjc_dimen_24"
        android:background="@drawable/zjc_shape_input_dark_bg_shape"
        android:gravity="start"
        android:hint="请输入"
        android:lines="4"
        android:padding="@dimen/zjc_dimen_10"
        android:textColor="@color/zjc_black_87"
        android:textSize="@dimen/zjc_size_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zjc_dialog_title_tv" />

    <TextView
        android:id="@+id/zjc_dialog_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/zjc_dimen_24"
        android:layout_marginTop="@dimen/zjc_dimen_36"
        android:layout_marginEnd="@dimen/zjc_dimen_8"
        android:layout_marginBottom="@dimen/zjc_dimen_20"
        android:background="@drawable/zjc_shape_conner4_app_theme"
        android:paddingStart="@dimen/zjc_dimen_24"
        android:paddingTop="@dimen/zjc_dimen_8"
        android:paddingEnd="@dimen/zjc_dimen_24"
        android:paddingBottom="@dimen/zjc_dimen_8"
        android:text="@string/zjc_btn_cancel"
        android:textColor="@color/zjcWhite"
        android:textSize="@dimen/zjc_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/zjc_dialog_confirm_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zjc_dialog_content_et" />

    <TextView
        android:id="@+id/zjc_dialog_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/zjc_dimen_8"
        android:layout_marginTop="@dimen/zjc_dimen_36"
        android:layout_marginEnd="@dimen/zjc_dimen_24"
        android:layout_marginBottom="@dimen/zjc_dimen_20"
        android:background="@drawable/zjc_shape_conner4_app_theme"
        android:paddingStart="@dimen/zjc_dimen_24"
        android:paddingTop="@dimen/zjc_dimen_8"
        android:paddingEnd="@dimen/zjc_dimen_24"
        android:paddingBottom="@dimen/zjc_dimen_8"
        android:text="@string/zjc_btn_ok"
        android:textColor="@color/zjcWhite"
        android:textSize="@dimen/zjc_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zjc_dialog_cancel_btn"
        app:layout_constraintTop_toBottomOf="@+id/zjc_dialog_content_et" />
</android.support.constraint.ConstraintLayout>