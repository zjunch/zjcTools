<?xml version="1.0" encoding="utf-8"?>
<com.android.zjctools.widget.ZSquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/zjc_pick_grid_camera_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/zGray54"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="@dimen/zjc_dimen_36"
            android:layout_height="@dimen/zjc_dimen_36"
            android:src="@drawable/zjc_ic_camera"
            android:tint="@color/z_white_54"
            />
        <TextView
            android:text="@string/zjc_camera"
            android:textColor="@color/z_white_54"
            style="@style/ZjcText.Subhead"
            />
    </LinearLayout>
</com.android.zjctools.widget.ZSquareLayout>
