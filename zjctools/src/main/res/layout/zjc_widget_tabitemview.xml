<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/zjc_tab_icon"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:src="@drawable/zjc_ic_back_color"/>

    <TextView
        android:id="@+id/zjc_tab_title"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        style="@style/text_12_black"
        android:text="首页"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/zjc_tab_icon"/>
    <TextView
        android:id="@+id/zjc_tab_point"
        android:layout_toRightOf="@id/zjc_tab_icon"
        android:layout_width="@dimen/zjc_dimen_12"
        android:text=""
        android:textSize="@dimen/zjc_size_8"
        android:textColor="@color/zjcWhite"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/zjc_point_red"
        android:layout_height="@dimen/zjc_dimen_12"/>
</RelativeLayout>
