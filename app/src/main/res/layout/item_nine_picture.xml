<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.android.zjctools.bean.NinePictureBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.android.zjctools.widget.nineimages.ZNinePicturesView
            android:id="@+id/ninePics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:zv_nine_full_One="true"
            app:zv_nine_max_counts="9"
            app:zv_nine_average2_enable="true"
            app:zv_nine_show_un_counts="true"
            app:zv_nine_spacex="4"
            app:zv_nine_spacey="4"/>
    </LinearLayout>

</layout>
